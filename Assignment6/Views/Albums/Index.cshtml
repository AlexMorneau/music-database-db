@model IEnumerable<Assignment6.Models.AlbumBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>
    Album List
</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    var date = item.ReleaseDate.ToLongDateString();
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ReleaseDate)*@
            @Html.Raw(date)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.UrlAlbum)*@
            <img src="@item.UrlAlbum" alt="@item.Name" style="width:100%; max-width:250px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
