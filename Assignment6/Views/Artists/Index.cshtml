@model IEnumerable<Assignment6.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Index";

    // var userAccount = new Assignment6.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Artist List</h2>


@if (User.IsInRole("Executive"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        var date = item.BirthOrStartDate.ToLongDateString();
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.UrlArtist)*@
                <img src="@item.UrlArtist" alt="@item.Name" style="width:100%; max-width:250px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.BirthOrStartDate)*@
                @Html.Raw(date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Executive)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
